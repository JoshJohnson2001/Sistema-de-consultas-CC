<%- include('partials/_header'); -%>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <form action="/vehicle/update/<%= data.vehicle_id%>" method="post">
                        <div class="form-group">
                            <input type="text" name="car_brand" value="<%= data.car_brand%>" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="car_plaque" value="<%= data.car_plaque%>" class="form-control"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="type_of_gas" value="<%= data.type_of_gas%>" class="form-control"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="date" name="purchase_date" value="<%= data.purchase_date%>" class="form-control"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="tank_capacity" value="<%= data.tank_capacity%>" class="form-control"
                                required>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Edit Vehicle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/_footer'); -%>