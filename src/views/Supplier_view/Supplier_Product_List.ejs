<%- include('partials/_header'); -%>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-7">
                <div>
                    <form action="/supplier/<%= dataID %>/product/create" method="get">
                        <button type="submit" class="btn btn-primary">
                            Add supplier
                        </button>
                    </form>
                </div>
                <table class="table table-bordered table-hover table-sm">
                    <thead>
                        <tr>
                            <td>Product_name </td>
                            <td>Price</td>
                            <td>Category_name</td>
                            <td>Subcategory_name</td>
                            <td>Is_available </td>
                            <td>Actions</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) { %>
                            <% for(var i=0; i < data.length; i++) { %>
                                <tr>
                                    <td><%= data[i].product_name%></td>
                                    <td><%= data[i].price%></td>
                                    <td><%= data[i].category_name%></td>
                                    <td><%= data[i].subcategory_name%></td>
                                    <td><%= data[i].is_available%></td>
                                    <td>
                                        <a href="/supplier/edit/<%= data[i].supplier_id %>">Edit</a>
                                        <a href="/supplier/delete/<%= data[i].supplier_id %>">Delete</a>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include('partials/_footer'); -%>