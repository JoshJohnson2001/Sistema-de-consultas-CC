<%- include('partials/_header'); -%>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <form action="/supplier/update/<%= data.supplier_id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="supplier_name" value="<%= data.supplier_name%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="formal_address" value="<%= data.formal_address%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" name="phone_number" value="<%= data.phone_number%>" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" value="<%= data.email%>" class=form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="have_delivery" value="<%= data.have_delivery%>" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Edit supplier
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/_footer'); -%>