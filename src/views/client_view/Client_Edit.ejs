<%- include('partials/_header'); -%>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <form action="/client/update/<%= data.client_id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="business_name" value="<%= data.business_name%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" name="phone_number" value="<%= data.phone_number%>" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" value="<%= data.email%>" class=form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="business_type" value="<%= data.business_type%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="business_representative" value="<%= data.business_representative%>" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="formal_address" value="<%= data.formal_address%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="geological_address" value="<%= data.geological_address%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="zone" value="<%= data.zone%>" class="form-control" autofocus>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Edit Client
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/_footer'); -%>